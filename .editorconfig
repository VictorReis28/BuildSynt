# EditorConfig para BuildSynt
# https://EditorConfig.org

# top-most EditorConfig file
root = true

# Configurações padrão para todos os arquivos
[*]
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
charset = utf-8
indent_style = space
indent_size = 2

# Frontend - React/TypeScript/JavaScript
[*.{js,jsx,ts,tsx}]
indent_style = space
indent_size = 2
max_line_length = 100

# Configurações de build/config
[*.{json,jsonc}]
indent_style = space
indent_size = 2

# Vite e outras configs
[vite.config.{js,ts}]
indent_style = space
indent_size = 2

# TypeScript configs
[tsconfig*.json]
indent_style = space
indent_size = 2

# Arquivos de estilo
[*.{css,scss,sass,less}]
indent_style = space
indent_size = 2

# PostCSS e Tailwind
[{postcss,tailwind}.config.{js,ts}]
indent_style = space
indent_size = 2

# ESLint config
[eslint.config.{js,ts}]
indent_style = space
indent_size = 2

# HTML
[*.html]
indent_style = space
indent_size = 2
max_line_length = 120

# Arquivos YAML/YML (Docker Compose, CI/CD)
[*.{yml,yaml}]
indent_style = space
indent_size = 2

# Docker
[{Dockerfile,*.dockerfile}]
indent_style = space
indent_size = 2

[docker-compose*.yml]
indent_style = space
indent_size = 2

# Markdown
[*.md]
indent_style = space
indent_size = 2
trim_trailing_whitespace = false
max_line_length = 80

# Makefiles
[{Makefile,*.mk}]
indent_style = tab
indent_size = 4

# Scripts Windows
[*.{bat,cmd}]
end_of_line = crlf
indent_style = space
indent_size = 4

# Scripts PowerShell
[*.ps1]
end_of_line = crlf
indent_style = space
indent_size = 4

# Scripts Shell Unix/Linux
[*.sh]
end_of_line = lf
indent_style = space
indent_size = 2

# Python (se houver)
[*.py]
indent_style = space
indent_size = 4
max_line_length = 88

# Package files
[package.json]
indent_style = space
indent_size = 2

[package-lock.json]
indent_style = space
indent_size = 2
insert_final_newline = false

# Yarn
[yarn.lock]
indent_style = space
indent_size = 2
insert_final_newline = false

# Git
[.gitignore]
indent_style = space
indent_size = 2

[.gitattributes]
indent_style = space
indent_size = 2

# Arquivos de configuração do projeto
[{.env,.env.*}]
indent_style = space
indent_size = 2

# Arquivos README específicos
[README*.md]
indent_style = space
indent_size = 2
max_line_length = 100
