# Configurações do BuildSynt
# Copie este arquivo para .env e ajuste as configurações

# Ambiente
NODE_ENV=production

# Database
DATABASE_URL=postgresql://buildsynt:buildsynt123@postgres:5432/buildsynt
POSTGRES_DB=buildsynt
POSTGRES_USER=buildsynt
POSTGRES_PASSWORD=buildsynt123

# Redis
REDIS_URL=redis://redis:6379

# Frontend
VITE_API_URL=http://localhost:5000
VITE_APP_NAME=BuildSynt
VITE_APP_VERSION=1.0.0

# Backend (para implementação futura)
JWT_SECRET=sua_chave_secreta_jwt_aqui
API_PORT=5000
CORS_ORIGIN=http://localhost:3000

# Email (para implementação futura)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=seu_email@gmail.com
SMTP_PASS=sua_senha_app

# Upload
MAX_FILE_SIZE=10485760
UPLOAD_PATH=/app/uploads

# Rate Limiting
RATE_LIMIT_WINDOW=900000
RATE_LIMIT_MAX=100

# Security
BCRYPT_ROUNDS=12
SESSION_SECRET=sua_chave_secreta_sessao_aqui

# Monitoring
LOG_LEVEL=info
ENABLE_REQUEST_LOGGING=true
